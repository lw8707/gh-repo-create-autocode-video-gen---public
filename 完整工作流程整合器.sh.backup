        echo "启动保险系统增强模式..."
        ./终极保险系统.sh
        ;;
    5)
        echo "启动完整工作流程..."
        echo "=== 阶段1: 保险检查 ==="
        ./终极保险系统.sh
        
        echo "=== 阶段2: 全球知识扫描 ==="
        ./全球知识扫描集成器.sh
        
        echo "=== 阶段3: 反向提问修复 ==="
        ./反向提问修复系统.sh
        
        echo "=== 阶段4: 深度研究循环 ==="
        ./深度研究循环启动器.sh
        
        echo "=== 阶段5: 结果上传 ==="
        git add .
        git commit -m "完整工作流程完成: $(date '+%Y-%m-%d %H:%M:%S')"
